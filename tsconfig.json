{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2018",
    "module": "esNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    /* Module Resolution Options */
    "baseUrl": "./",
    "paths": {
      /* Support absolute /imports/* with a leading '/' */
      "/*": ["*"],
      "file-type":["./packages/core-files/.npm/package/node_modules/file-type/index.d.ts"],
      "@reactioncommerce/random": ["./packages/core-files/.npm/package/node_modules/@reactioncommerce/random"],
      "dataloader": ["./packages/api/.npm/package/node_modules/dataloader/index.d.ts"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "exclude": [
    "./examples/**"
  ],
  "include": ["packages/**/*"]
}
